{
  "name": "ts-server-scaffold",
  "type": "module",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "scripts": {
    "start": "node dist/main.js",
    "start:dev": "nodemon --ext js,ts,json,env --exec 'node --experimental-modules --experimental-specifier-resolution=node --loader ts-node/esm' src/main.ts | npx pino-pretty",
    "start:win":"node --experimental-modules --experimental-specifier-resolution=node --loader ts-node/esm src/main.ts | npx pino-pretty",
    "prepare": "husky install",
    "build": "tsc --project tsconfig.build.json",
    "build:clean": "rm -rf tsconfig.build.tsbuildinfo && rm -rf ./dist",
    "build:watch": "tsc -w -p tsconfig.json",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "npm run test -- --coverage",
    "test:ci": "npm run test -- --colors --coverage --ci --passWithNoTests",
    "lint": "eslint --ext .ts,.js .",
    "format": "prettier \"./**\" --write --ignore-unknown",
    "format:check": "prettier \"./**\" --ignore-unknown --check"
  },
  "dependencies": {
    "@fastify/autoload": "^5.6.0",
    "@fastify/swagger": "^8.2.1",
    "@fastify/swagger-ui": "^1.3.0",
    "@fastify/type-provider-typebox": "^2.4.0",
    "@prisma/client": "^4.7.1",
    "@sinclair/typebox": "^0.25.13",
    "dotenv": "^16.0.0",
    "fastify": "^4.10.2",
    "fastify-plugin": "^4.4.0",
    "ldapjs": "^2.3.3",
    "pino": "^8.7.0",
    "pino-pretty": "^9.1.1",
    "prisma": "^4.7.1",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@jest/globals": "^28.0.0",
    "@jest/types": "^28.0.0",
    "@types/jest": "^27.4.1",
    "@types/ldapjs": "^2.2.5",
    "@types/node": "^18.0.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.12.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^27.1.6",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "husky": "^8.0.2",
    "jest": "^27.5.1",
    "lint-staged": "^13.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.1",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  }
}
